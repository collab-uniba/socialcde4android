<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/LightCyan"
                android:endColor="@color/LightBlue" android:angle="270" />
            <stroke android:width="5dp" android:color="@color/White" />
            <corners android:radius="10dp" />
            <padding android:left="10dp" android:top="6dp"
                android:right="10dp" android:bottom="6dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient android:endColor="@color/LightSkyBlue"
                android:startColor="@color/Azure" android:angle="270" />
            <corners android:radius="10dp" />
            <padding android:left="10dp" android:top="6dp"
                android:right="10dp" android:bottom="6dp" />
        </shape>
    </item>

</selector>